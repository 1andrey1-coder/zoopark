<Page x:Class="zoopark.View.EditTools"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zoopark.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditTools">

    <StackPanel Background="White">
        <TextBlock Text="Классификация"/>
        <TextBox Text="{Binding Edit.Classification}"/>

        <TextBlock Text="Производительность"/>
        <TextBox Text="{Binding Edit.Performance}"/>

        <TextBlock Text="Описание"/>
        <TextBox Text="{Binding Edit.Reliability}"/>

        <TextBlock Text="Износостойкость"/>
        <TextBox Text="{Binding Edit.Wear_resistance}"/>

        <Button Content="Сохранить" Click="Save" 
                HorizontalAlignment="Center"/>
    </StackPanel>
</Page>
