<Page x:Class="zoopark.View.EditFood"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zoopark.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditFood">

    <StackPanel Background="White" >
        
        <TextBlock Text="Тип" />
        <TextBox Text="{Binding Edit.Tip}"/>

        <TextBlock Text="Количество"  Background="White"/>
        <TextBox Text="{Binding Edit.Count}"/>
        
        <Button Content="Сохранить" Click="Save" 
                HorizontalAlignment="Center"/>
    </StackPanel>
</Page>
